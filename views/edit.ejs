<%- include("partials/header") %>
    <div class="container container-login">
        <h1 class="title">
            <span class="light">Hours</span> Calculator
        </h1>
        <p class="edit-text light">Edit your shift for
            <strong><%= month.month %>
                <%= shift.date %></strong>
        </p>
        <form class="edit-form" action="/<%= month._id%>/shift/<%= shift._id %>?_method=put" method="POST" autocomplete="off">
            <div class="form-group">
                <label for="start-time">Start time?</label>
                <input class="top-inputs time" name="startTime" type="text" value="<%= functions.spacer(shift.startTime) %>" required>
            </div>
            <div class="form-group">
                <label for="end-time">Finish time?</label>
                <input class="top-inputs time" name="endTime" type="text" value="<%= functions.spacer(shift.finishTime) %>" required>
            </div>
            <div class="form-group">
                <label for="lunch-time"><a onclick="" data-tool-tip="01:45 = 1hr 45mins">Lunch time? <i class="far fa-question-circle"></i></a></label>
                <input class="top-inputs lunchTime" name="lunchTime" type="text" value="<%= functions.spacer(shift.lunchTime) %>" required>
            </div>
            <div class="form-group submit">
                <input class="top-inputs button" value="Submit" type="submit">
            </div>
        </form>
        <a class="back" href="/<%=month._id%>">Back</a>
    </div>

    <%- include("partials/footer") %>