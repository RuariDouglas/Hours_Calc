<%- include("partials/header") %>
    <div class="container container-login">
        <h1 class="title">
            <span class="light">Hours</span> Calculator
        </h1>
        <p class="edit-text light">Edit your shift for
            <strong><%= month.month %>
                <%= shift.date %></strong>
        </p>
        <form class="edit-form" action="/<%= month._id%>/shift/<%= shift._id %>?_method=put" method="POST" autocomplete="off">
            <div class="form-group">
                <label for="start-time">Start time?</label>
                <input class="top-inputs" min="0" max="23" type="time" id="start-time" name="startTime" value="<%=shift.startTime%>" required>
            </div>
            <div class="form-group">
                <label for="end-time">Finish time?</label>
                <input class="top-inputs" step="300" min="0" max="23" type="time" id="end-time" name="endTime" value="<%=shift.finishTime%>" required>
            </div>
            <div class="form-group">
                <label for="lunchTime">Time taken for lunch?</label>
                <input class="top-inputs" step="300" min="0" max="23" type="time" id="lunch-time" value="<%=shift.lunchTime%>" name="lunchTime" required>
            </div>
            <div class="form-group submit">
                <input class="top-inputs button" value="Submit" type="submit">
            </div>
        </form>
        <a class="back" href="/<%=month._id%>">
            Back</a>


    </div>
    </body>

    </html>